<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Frame name="ZKFFormTemplate" movable="true" enableMouse="true" virtual="true">
    <Size>
      <AbsDimension x="100" y="300" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="0" y="0" />
        </Offset>
      </Anchor>
    </Anchors>
    <TitleRegion setAllPoints="true" />
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background">
      <TileSize>
        <AbsValue val="32" />
      </TileSize>
      <EdgeSize>
        <AbsValue val="32" />
      </EdgeSize>
    </Backdrop>
    <Frames>
	  <Button name="$parentIcon" text="">
        <Size>
          <AbsDimension x="50" y="50" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="25" y="-25" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnEnter>myIconEnter(self)</OnEnter>
          <OnLeave>myIconLeave(self)</OnLeave>
--          <OnClick>myIconClick(self)</OnClick>
        </Scripts>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="10" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormal" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
      </Button>
	  <Button name="$parentRoll" text="">
        <Size>
          <AbsDimension x="50" y="50" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="25" y="-125" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>ZebraKarmaFrames:ZKFRoll(self)</OnClick>
        </Scripts>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="10" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormal" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
        <NormalTexture file="Interface\Buttons\UI-GroupLoot-Dice-Up"/>
        <DisabledTexture file="Interface\Buttons\UI-GroupLoot-Pass-Up"/>
      </Button>
      <Button name="$parentbtnBonus" text="Bonus">
        <Size>
          <AbsDimension x="80" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-200" />
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up">
                  <TexCoords left="0" right="0.625" top="0" bottom="0.6875" />
        </NormalTexture>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="8" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormalSmall" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
        <Scripts>
        	<OnClick>myBonusClick(self)</OnClick>
        </Scripts>
      </Button>
      <Button name="$parentbtnNoBonus" text="No Bonus">
        <Size>
          <AbsDimension x="80" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-220" />
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up">
                  <TexCoords left="0" right="0.625" top="0" bottom="0.6875" />
        </NormalTexture>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="8" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormalSmall" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
        <Scripts>
        	<OnClick>myNoBonusClick(self)</OnClick>
        </Scripts>
      </Button>
      <Button name="$parentbtnOffSpec" text="Off Spec">
        <Size>
          <AbsDimension x="80" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-240" />
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up">
                  <TexCoords left="0" right="0.625" top="0" bottom="0.6875" />
        </NormalTexture>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="8" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormalSmall" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
        <Scripts>
        	<OnClick>myOffSpecClick(self)</OnClick>
        </Scripts>
      </Button>
      <Button name="$parentbtnPass" text="Pass">
        <Size>
          <AbsDimension x="80" y="20" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-260" />
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\Buttons\UI-Panel-Button-Up">
                  <TexCoords left="0" right="0.625" top="0" bottom="0.6875" />
        </NormalTexture>
        <ButtonText name="$parentText">
          <FontHeight>
            <AbsValue val="8" />
          </FontHeight>
        </ButtonText>
        <NormalFont style="GameFontNormalSmall" />
        <HighlightFont style="GameFontHighlight" />
        <DisabledFont style="GameFontDisable" />
        <Scripts>
        	<OnClick>myPassClick(self)</OnClick>
        </Scripts>
      </Button>
      <Frame name="$parentLabel">
        <Size>
          <AbsDimension x="90" y="60" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="5" y="-65" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer>
            <FontString name="$parentText" font="Fonts\FRIZQT__.TTF" text="">
              <Anchors>
                <Anchor point="TOPLEFT" />
                <Anchor point="BOTTOMRIGHT" />
              </Anchors>
              <FontHeight>
                <AbsValue val="12" />
              </FontHeight>
              <Color r="1" g="0.8196079" b="0" />
              <Shadow>
                <Color r="0" g="0" b="0" />
                <Offset>
                  <AbsDimension x="1" y="-1" />
                </Offset>
              </Shadow>
            </FontString>
          </Layer>
        </Layers>
      </Frame>
    </Frames>
  </Frame>
</Ui>